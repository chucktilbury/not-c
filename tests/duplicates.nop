
/*
 * Return a list with the duplicates deleted from the given list.
 */

int remove_duplicates(int list nums, int arr_size)
{
    if (arr_size <= 1) {
        return arr_size
    }

    int i = 0
    int j = 1
    int count = 1
    while (i < arr_size) {
        do {
            if (j < arr_size) {
                nums[count] = nums[j]
                count = count + 1;
            }
            i = j
            j = j + i
        } while(j < arr_size and nums[i] == nums[j])
    }

    return count;
}

